{
    "plugins": ["jsdoc-plugin-typescript"],
    "source": {
        "include": ["dist"],
        "includePattern": "(account|api|filter|collection_helpers|config|enums|errors|index|logger|mastodon_server|\\/scorer|(language|string|time)_helpers?|toot|types|user_data|.*_list)\\.[jt]sx?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "destination": "./docs",
        "encoding": "utf8",
        "recurse": true,
        "template": "./jsdoc_template"
    },
    "templates": {
        "default": {
            "outputSourceFiles": false
        }
    }
}
